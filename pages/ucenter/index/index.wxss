page {
  height: 100%;
  width: 100%;
  background: #f4f4f4;
}

.container {
  background:white;
  height: auto;
  overflow: hidden;
  width: 100%;
}

.profile-info {
  /* background-color: rgb(0, 173, 162); */
  color: #f4f4f4;
  display: flex;
  align-items: center;
  padding: 30rpx;
  font-size: 28rpx;
  position: relative;
}

.hyview{
  position: absolute;
  right: 0rpx;
  width: 160rpx;
  height: 58rpx;
  background: rgb(71,60,56);
  border-top-left-radius: 52rpx;
  border-bottom-left-radius: 52rpx;
  padding: 20rpx 10rpx;
  box-sizing: border-box;
  justify-items: center;
  align-items: center;
  align-content: center;
  display: flex;
}
.hyk{
  display: flex;
  width: 100%;
  justify-items: center;
  align-items: center;
}
.hykimage{
  width:38rpx ;
  height: 26rpx;
  margin-left: 10rpx;
}
.hyktext{
  padding-left: 12rpx;
  color: #16b4ad;
  font-size: 26rpx;
}
.ljkt{
  width: 155rpx;
  height: 46rpx;
  border-radius: 36rpx;
  box-sizing: border-box;
  text-align: center;
  line-height: 46rpx;
  background: rgb(59,60,54);
  background-color: #16b4ad;
  color: white;
  font-size: 22rpx;
  margin-left: 40rpx;
}
.kthy{
  width: 686rpx;
  margin-left: 32rpx;
  height: 130rpx;
  justify-items: center;
  align-items: center;
  align-content: center;
  display: flex;
  border-radius: 10rpx;
  padding: 0rpx 20rpx;
  box-sizing: border-box;
  position: relative;
  z-index: 1;
  overflow: hidden;
  background: #f4f4f4;
}
.kthy::after {
  content: '';
  width: 120%;
  height: 120rpx;
  position: absolute;
  left: -10%;
  top: 0;
  z-index: -1;
  border-radius: 0 0 110% 110%;
  background: rgb(59,60,54);
}
.kthytext{
  font-size: 32rpx;
  color: rgb(202,180,153);
  margin-left: 25rpx;
}
.grzy{
  width: 100%;
  position: relative;
  margin-top: 10rpx;
  background: #f4f4f4;
  padding-bottom: 15rpx;
}
.wdye{
  justify-items: center;
  align-items: center;
  align-content: center;
  display: flex;
  width: 100%;
  padding-bottom: 30rpx;
}
.wdye2{
  justify-items: center;
  align-items: center;
  align-content: center;
