}
.wdye3{
  float: left;
  padding-top: 30rpx;
  justify-items: center;
  align-items: center;
  align-content: center;
  display: flex;
  width: 50%;
  padding-bottom: 30rpx;
}
.minedh{
  width: 686rpx;
