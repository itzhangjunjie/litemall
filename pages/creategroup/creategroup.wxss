
.gslogo {
  width: 100%;
  height: 400rpx;
}

.gslogo image {
  width: 100%;
  height: 100%;
}

.creategroup-banner{
  width: 100%;
  height: 324rpx;
  display: block;
}
.group-form{
  margin-top:16rpx;
  background-color:#fff;
  display:block;
  padding-bottom:74rpx;
}

.group-form-item{
  padding:24rpx 30rpx;
  border-bottom:2rpx solid #eee;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-flow: row wrap;
}
.group-form-label{
  font-size:28rpx;
}
.avatar{
  width:92rpx;
  height:92rpx;
  border-radius:50%;
}
.group-form-input{
  flex:1;
  text-align: right;
  font-size:28rpx;
}
.placeholder-class{
  color:#bbb;
}
.group-form-textarea{
  width:690rpx;
  height:130rpx;
  margin-top:10rpx;
  font-size:28rpx;
  color:#434343;
}
.group-form-getCode{
  font-size:28rpx;
  background: #f5f5f5;
  padding: 10rpx 20rpx;
  margin-left: 20rpx;
  line-height: inherit;
}
.group-form-btn{
  width:520rpx;
  height:88rpx;
  line-height:88rpx;
  display:block;
  margin:50rpx auto 0;
  text-align:center;
  background-color:#47B34F;
  color:#FFF;
  font-size:28rpx;
  border-radius:88rpx;
  cursor:pointer;
  z-index:8000;
  margin-bottom: 30rpx;
}

.user_column_item_phone {
  text-align: right;
  flex: 1;
  padding: 0rpx;
  background: #fff;
  border-radius: 0;
}

.user_column_item_phone::after {
  border: none;
  border-radius: 0;
}